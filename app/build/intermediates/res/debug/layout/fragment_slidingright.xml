<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_slidingright"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_setting"
        style="@style/menu_text"
        android:text="设置" />

    <include layout="@layout/divider_line_h" />

    <LinearLayout
        android:id="@+id/check_update"
        style="@style/menu_text"
        android:gravity="center" >

        <TextView
            style="@style/menu_text"
            android:layout_width="wrap_content"
            android:text="检查更新" />

        <ImageView
            android:id="@+id/unread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/tab_unread_bg"
            android:visibility="gone" />
    </LinearLayout>

    <include layout="@layout/divider_line_h" />
    <TextView
        android:id="@+id/uploads"
        style="@style/menu_text"
        android:text="上传文件到kindle" />

    <include layout="@layout/divider_line_h" />
    <TextView
        android:id="@+id/share"
        style="@style/menu_text"
        android:text="使用技巧" />

    <include layout="@layout/divider_line_h" />

    <TextView
        android:id="@+id/about"
        style="@style/menu_text"
        android:text="关于" />

    <include layout="@layout/divider_line_h" />

    <TextView
        android:id="@+id/feedback"
        style="@style/menu_text"
        android:text="意见反馈" />

</LinearLayout><!-- From: file:/Users/twer/SunZhuo/code/KindleApp/app/src/main/res/layout/fragment_slidingright.xml -->