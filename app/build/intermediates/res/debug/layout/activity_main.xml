<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <EditText
        android:id="@+id/et_user_url"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#e0e0e0"
        android:gravity="top"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_page_edge_padding" >

        <Button
            android:id="@+id/bt_clear"
            style="@style/sendbutton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:text="清除内容" />

        <Button
            android:id="@+id/bt_preview"
            style="@style/sendbutton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:text="预览内容" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_send"
        style="@style/sendbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/common_page_edge_padding"
        android:background="@drawable/btn_selector"
        android:text="发送到我的Kindle" />

</LinearLayout><!-- From: file:/Users/twer/SunZhuo/code/KindleApp/app/src/main/res/layout/activity_main.xml -->